<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/fragment_profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image_kirby"

        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/fragment_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hello there"
        android:textSize="25sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="15"
        android:ellipsize="end"
        android:layout_toEndOf="@id/fragment_profileImageView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/fragment_ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rating: 10.5"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@android:color/holo_red_dark"

        android:layout_below="@id/fragment_nameTextView"
        android:layout_toEndOf="@id/fragment_profileImageView"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/fragment_sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex_textViewNoTabs"
        android:textStyle="bold"
        android:textSize="25sp"

        android:layout_below="@id/fragment_profileImageView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/sex_ImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_male"

        android:layout_toEndOf="@id/fragment_sexTextView"
        android:layout_below="@id/fragment_profileImageView"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/fragment_ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Age: 1"
        android:textSize="25sp"
        android:textStyle="bold"

        android:layout_below="@id/fragment_profileImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/fragment_descTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="A happy thing"
        android:textSize="15sp"
        android:maxLines="7"

        android:layout_below="@id/fragment_sexTextView"
        android:layout_margin="15dp"
        />

    <RatingBar
        android:id="@+id/fragment_ratingRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />


</RelativeLayout>